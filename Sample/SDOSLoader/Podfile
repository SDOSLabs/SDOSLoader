source 'http://git.sdos.es/ios/cocoapods-specs.git'
source 'https://github.com/CocoaPods/Specs.git'

inhibit_all_warnings!
use_frameworks!

#=================================================
#=====================Project=====================
#Poner aquí todas las librerías propias del proyecto



#=================================================
#=================================================

#=====================Core=====================

def shared_pods
	
	platform :ios, '8.0'
	pod 'SDOS', :path => '../../../SDOS'
	pod 'SDOSLocalizableString', :path => '../../../SDOSLocalizableString'
	pod 'SDOSLoader', :path => '../../'
end

def shared_podsTV
	
	platform :tvos, '9.0'
	pod 'SDOS', :path => '../../../SDOS'
	pod 'SDOSLocalizableString', :path => '../../../SDOSLocalizableString'
	pod 'SDOSLoader', :path => '../../'

end

target :SDOSLoader do
	shared_pods
end

target :SDOSLoaderTV do
	shared_podsTV
end